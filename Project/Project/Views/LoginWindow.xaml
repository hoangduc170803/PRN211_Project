<Window x:Class="Project.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Project.ViewModels"
        Title="Login"
        Height="350" Width="450"
        WindowStartupLocation="CenterScreen">
    <!-- Đặt DataContext trỏ đến LoginViewModel -->
    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>

    <!-- Nền xám nhạt cho toàn cửa sổ -->
    <Grid Background="#EFEFEF">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Border màu trắng để làm nền cho form login, bo tròn góc, canh giữa -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="10"
                Padding="20"
                BorderBrush="Gray"
                BorderThickness="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Height="350" Width="450">

            <StackPanel Width="300">
                <!-- Tiêu đề lớn -->
                <TextBlock Text="Welcome"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Email -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Email:" Width="80"
                           VerticalAlignment="Center"/>
                    <TextBox Width="200"
                             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- PasswordBox (cần xử lý PasswordChanged trong code-behind) -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Password:" Width="80"
                           VerticalAlignment="Center"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Width="200"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>
                </StackPanel>

                <!-- Nút Login -->
                <Button Content="Login"
                        Width="100"
                        Height="35"
                        HorizontalAlignment="Center"
                        Command="{Binding LoginCommand}"
                        Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
